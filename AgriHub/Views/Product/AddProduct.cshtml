@model AgriHub.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    // Set default date to 2025 if not already set
    if (Model.ProductionDate == default(DateTime))
    {
        Model.ProductionDate = new DateTime(2025, 1, 1);
    }
}
<link rel="stylesheet" href="~/css/productForm.css" />

<a asp-controller="Product" asp-action="MyProducts" class="btn btn-outline-secondary" style="position: absolute; top: 20px; left: 20px; z-index: 10;">&larr; Back</a>

<div class="claim-form-container" style="max-width: 600px; margin: auto;">
   
    <form asp-controller="Product" asp-action="AddProduct" method="post">
        <img src="~/images/AddProduct img.png" alt="Add Product" class="form-header-image" /> <!-- (eScience Center, 2022) -->
        <h1>Add Product</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-row">
            <div class="left-column">
                <!-- Product Name -->
                <div class="form-group">
                    <label for="Name">Product Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                </div>

                <!-- Category -->
                <div class="form-group">
                    <label for="Category">Category</label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <input asp-for="Category" class="form-control" placeholder="Enter category" />
                </div>

                <!-- Product Image URL -->
                <div class="form-group">
                    <label asp-for="ImageUrl">Product Image URL</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
                    <small class="form-text text-muted">Enter a URL to an image of your product (optional)</small>
                </div>
            </div>

            <div class="right-column">
                <!-- Production Date -->
                <div class="form-group">
                    <label for="ProductionDate">Production Date</label>
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                    <input asp-for="ProductionDate" type="date" class="form-control" value="@Model.ProductionDate.ToString("yyyy-MM-dd")" />
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                </div>
            </div>
        </div>

        <div class="submit-button-container">
            <button type="submit" class="btn btn-success">Add Product</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

